<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}IDP!{% endblock %}</title>

        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body class="container-lg mt-lg-1">
    <div class="row">
        <div class="col-lg-24">

        </div>
    </div>

        <div class="row">
            <div class="col-lg-2 bg-dark pb-lg-2">
                <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">
                    <svg class="bi pe-none me-2" width="40" height="32"><use xlink:href="#bootstrap"></use></svg>
                    <span class="fs-4">IDP</span>
                </a>
                <hr>
                {{ render(controller(
                    'App\\Controller\\NavigationController::main', {active: app.request.get('_route')}
                )) }}
            </div>
            <div class="col-lg-10">
                <nav class="navbar sticky-top navbar-expand-lg navbar-dark bg-primary p-lg-2">
                    <a class="navbar-brand" href="#">Individual Development plans</a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarColor01">
                        <ul class="navbar-nav mr-auto">
                            <li class="nav-item active">
                                <a class="nav-link" href="#">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ url('admin') }}">Admin area</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">About</a>
                            </li>
                        </ul>

                    </div>
                </nav>
                {% block body %}

                {% endblock %}
            </div>
        </div>
    </body>
</html>
